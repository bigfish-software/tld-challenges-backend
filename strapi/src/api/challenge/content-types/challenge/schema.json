{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "Challenge"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": false
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "description_short": {
      "type": "text"
    },
    "description_long": {
      "type": "blocks"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Easy",
        "Medium",
        "Hard",
        "Very Hard"
      ]
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "submissions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::submission.submission",
      "mappedBy": "challenge"
    },
    "creators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::creator.creator",
      "inversedBy": "challenges"
    },
    "faqs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::faq.faq",
      "inversedBy": "challenges"
    },
    "custom_code": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::custom-code.custom-code",
      "inversedBy": "challenges"
    },
    "rules": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::rule.rule",
      "inversedBy": "challenges"
    },
    "tournament": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::tournament.tournament",
      "inversedBy": "challenges"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": false
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "description_short": {
      "type": "text",
      "maxLength": 160
    },
    "description_long": {
      "type": "blocks"
    },
    "start_date": {
      "type": "datetime",
      "required": true
    },
    "end_date": {
      "type": "datetime",
      "required": true
    },
    "state": {
      "type": "enumeration",
      "default": "planned",
      "enum": [
        "planned",
        "active",
        "completed",
        "cancelled"
      ]
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "creators": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::creator.creator",
      "mappedBy": "tournaments"
    },
    "faqs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::faq.faq",
      "mappedBy": "tournaments"
    },
    "challenges": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::challenge.challenge",
      "mappedBy": "tournament"
    }
  }
}
